{
  "name": "kas-frontend-app",
  "version": "1.0.0",
  "description": "KLYZ Assessment System 客户端",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@types/node": "^24.3.1",
    "exceljs": "^4.4.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^8.2.2",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.2",
    "vite": "^4.5.14",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "com.klyz.assessment",
    "productName": "KLYZ Assessment System",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.cjs"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
