{
  "name": "kas-frontend-app",
  "version": "1.0.0",
  "description": "学生违纪表彰通报系统",
  "author": {
    "name": "垦利校区高三学部",
    "email": "admin@klyz.edu.cn"
  },
  "main": "main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^8.2.2",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "typescript": "~5.4.5",
    "vite": "^4.5.14",
    "vue-tsc": "^2.1.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.klyz.student-report-system",
    "productName": "学生违纪表彰通报系统",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "files": [
      "main.cjs",
      "preload.js",
      "dist/**/*",
      "!**/*.map",
      "!**/node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "学生通报系统"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Education"
    }
  }
}
